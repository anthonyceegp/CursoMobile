<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dimes_16dp"
    android:orientation="vertical"
    tools:context=".joke.views.JokeFragment"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/joke_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimes_64dp"
        android:contentDescription="@string/joke_icon"
        tools:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/joke_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimes_32dp"
        android:gravity="center"
        android:textSize="@dimen/dimes_16sp"
        tools:text="Message" />

</LinearLayout>